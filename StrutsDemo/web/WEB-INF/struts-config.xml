<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="loginForm" type="LoginForm"></form-bean>
    </form-beans>

    <action-mappings>
        <action path="/login" type="ActionTest" name="loginForm">
            <forward name="success" path="/success.html"></forward>
            <forward name="fail" path="/fail.html"></forward>
        </action>
    </action-mappings>
</struts-config>